	//1. add 10 employees
	public void inputEmployee() {
		Scanner scan = new Scanner(System.in);
		
        String num = "", name = "", course = "";
        int years = 0;  
        
        /**can make this number to 3 for now but keep at 10 later */
        for (int count=1; count <=3; count++)	
        {
        	// --------- do while --------------
        	do { 
        	System.out.print("Enter Employee [Number] " + count + " : ");
            num = scan.nextLine(); 
            e = new Employee(num, name, years, course);
            //System.out.println("TEST: " + compareEmployee(e));
            	
            if (list.contains(e)) {
            	System.out.println("Employees Number is the same!");
            }	else
            	System.out.print("number added");
            
        	}while(list.contains(e)); //true = duplicate found 
        	// -----------------------------------------
        	
            System.out.print("\nEnter Employee [Name] " + count + " : ");
            name = scan.nextLine();
            
            
            //<<<<<<<<<<<<<<<<<do while>>>>>>>>>>>>>>>>>>
            do {
            System.out.print("Enter Employee [Years] working " + count + " : ");
            years = scan.nextInt();
            scan.nextLine();
            
            }while(enoughYears(years) == false);
            //---------------------------------
            
            
            
        //    do {
            System.out.print("Enter Employee [Course] name " + count + " : ");
            course = scan.nextLine();
         //   }while(correctCourse);
            
            
            
            System.out.print("- - - - - - - - - - - - - - -\n");
            //pass info into list
            e = new Employee(num, name, years, course);
            
            //Add to LinkedList
            list.add(e);
            System.out.println(e.toString());
            System.out.println(list.toString());
        }
	}
	
	//compare 2 objects not 'strings'
	public boolean compareEmployee(Employee e){

		//call is.empty from linked list
		//use "list" to call methods from other classes
		if(list.isEmpty()) {
			//System.out.print("employee list is empty, number added");
		}
		// if not empty, then compare employee numbers
		else{
		for(int i = 0; i < list.size(); i++ ){
				if(list.get(i).equals(e)) {
					System.out.print("true");
					return true;
				}
			}
		} 
		return false;
	}
	
	
	//must have 5 or more years of experience
	public boolean enoughYears(int years){
		if(years < 5) {
		System.out.print("error - minimum of 5 working years required \n");
			return false;
		}
		return true;
	}
	
	
	
	
