public class TrainingCourses{
	//global variables
	LinkedList<Employee> list; //Global variable
	Employee e;

	private String num = "", name = "", course = "";
	private int years = 0;  

	//CONSTRUCTOR
	public TrainingCourses(){
		list = new LinkedList<Employee>();

		testInput();
		//add(); //1.


		displayEmployee(); //2.
